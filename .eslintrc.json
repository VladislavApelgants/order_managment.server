{
  "env": {
    "browser": false,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "prettier", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "ignorePatterns": ["dist/**"],
  "rules": {
    "semi": ["error", "always"],
    "@typescript-eslint/semi": 0,
    "@typescript-eslint/strict-boolean-expressions": 0,
    "@typescript-eslint/no-misused-promises": 0
  }
}
